  pod 'FBSDKCoreKit', '~> 4.2'
  pod 'GA-SDK-IOS', '~> 2.2'
  pod 'Google/Analytics'
  pod 'SwiftLint'
end

target 'ELColorGameTests' do
  pod 'Google/Analytics'
  pod 'Nimble', '~> 7.0'
  pod 'Quick', '~> 1.1'
end
